{
  "rules": [
    {
      "name": "Проверка существующего кода",
      "type": "function_check",
      "description": "Проверка на существование функции с таким же именем и сигнатурой",
      "severity": "warning"
    },
    {
      "name": "Capture Analysis",
      "type": "memory_check",
      "description": "Проверка на retain cycles",
      "severity": "error"
    },
    {
      "name": "Race Conditions",
      "type": "concurrency_check",
      "description": "Проверка на возможные race conditions",
      "severity": "error"
    },
    {
      "name": "Deployment Target",
      "type": "api_compatibility",
      "description": "Проверка совместимости API с минимальной версией развертывания",
      "severity": "error"
    },
    {
      "name": "Deprecated API",
      "type": "api_check",
      "description": "Проверка использования устаревших API",
      "severity": "warning"
    }
  ]
} 